{# templates/vaibhav-weather.html.twig #}
<div class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-6 my-8">
  <h2 class="text-2xl font-bold text-gray-800 mb-4">{{ title }}</h2>

  <div class="space-y-3">
    {% for key, value in weather %}
      <div class="flex justify-between items-center bg-gray-50 p-3 rounded-md">
        <span class="text-gray-600 font-medium">{{ key }}</span>
        <span class="text-blue-600 font-semibold">{{ value }}</span>
      </div>
    {% endfor %}
  </div>
</div>
